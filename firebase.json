{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/bigben",
        "function": {
          "functionId": "bigben",
          "region": "us-central1"
        }
      },
      {
        "source": "/",
        "run": {
          "serviceId": "hello",
          "region": "us-west1",
          "pinTag": true
        }
      },
      {
        "source": "/signup",
        "run": {
          "serviceId": "hello",
          "region": "us-west1",
          "pinTag": true
        }
      },
      {
        "source": "/login",
        "run": {
          "serviceId": "hello",
          "region": "us-west1",
          "pinTag": true
        }
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
